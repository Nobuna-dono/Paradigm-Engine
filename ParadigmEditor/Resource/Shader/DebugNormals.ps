// Pixel shader HLSL 5
//_______________________________
// * Display normal debug.

struct PixelInput
{
    float4 position : SV_POSITION;
    float3 normal : NORMAL;	
};

float4 PixelToFrameBuffer(PixelInput input) : SV_TARGET
{	
	return float4(input.normal *0.5 + 0.5, 1);	
}